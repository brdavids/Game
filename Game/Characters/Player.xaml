<UserControl x:Name="myPlayer"
    x:Class="Game2.Player"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Game2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Width="100" Height="100">
    <Grid HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100" Tapped="Grid_Tapped">
        <Ellipse Fill="Blue" Stroke="White" StrokeThickness="5" Margin="5"/>
        <Rectangle Fill="Black" HorizontalAlignment="Left" Height="20" Margin="23,27,0,0" StrokeThickness="3" VerticalAlignment="Top" Width="22"/>
        <Rectangle Fill="Black" HorizontalAlignment="Left" Height="20" Margin="53,27,0,0" StrokeThickness="3" VerticalAlignment="Top" Width="22"/>
        <Rectangle Fill="Black" HorizontalAlignment="Left" Height="5" Margin="38,27,0,0" StrokeThickness="3" VerticalAlignment="Top" Width="22"/>
        <Rectangle Fill="White" HorizontalAlignment="Left" Height="5" Margin="31,67,0,0" StrokeThickness="3" VerticalAlignment="Top" Width="37"/>
    </Grid>
</UserControl>
